# #------ Unused Keys ------# #
# b+ d+ f\+ g+ m\+ p\+ q\+ t\+ u+ v\+ w\+ x z+
# [\+ ]\+ /+ <\+ >\+ [F5-F12]+ [F1-F3]\+ ;\+ '\+ arrow+ pgup+ pgdown+ capslock+ ctrl+ alt+ 
# home+ end+ insert+

# #------ Basic Definitions ------# #
# Needed for i3-gaps
for_window [class="^.*"] border pixel 2
gaps inner 15
gaps outer 0

set $mod Mod4
set $term 				--no-startup-id $TERMINAL
set $shutdown 			sudo -A shutdown -h now
set $reboot				sudo -A reboot
set $netrefresh			sudo -A systemctl restart NetworkManager
set $hibernate 			sudo -A systemctl suspend 

# #----- External Scripts ------# #
exec --no-startup-id feh --bg-scale ~/.config/wallpapers/icedrag.jpg
# exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# #------ Basic Bindings ------# #
bindsym $mod+Return		exec $term
bindsym $mod+r			exec $term -hold -e bash -c "ranger && bash"
bindsym $mod+p			exec $term -hold -e bash -c "htop && bash"
bindsym $mod+Shift+p	exec $term -hold -e bash -c "glances && bash"
bindsym $mod+e			exec $term -hold -e bash -c "neofetch && bash" 
bindsym $mod+n			exec $term -hold -e bash -c "newsboat -C ~/.config/newsboat/config && bash"
bindsym $mod+m			exec $term -hold -e bash -c "neomutt && bash"
bindsym $mod+c			exec $term -hold -e bash -c "calcurse && bash"
bindsym $mod+v 			exec $term -hold -e bash -c "cava -p ~/.config/cava/config && bash"

bindsym $mod+q 			kill
bindsym $mod+w			exec --no-startup-id $BROWSER

bindsym $mod+Shift+c 	reload
bindsym $mod+Shift+r 	restart
bindsym $mod+Shift+e 	exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+Shift+BackSpace	exec --no-startup-id $reboot
bindsym $mod+Shift+Delete		exec --no-startup-id $shutdown
bindsym	$mod+Shift+n			exec --no-startup-id $netrefresh
bindsym $mod+Shift+backslash	exec --no-startup-id betterlockscreen -l -t "keegan@rogue" & sleep 0.5 && $hibernate

bindsym $mod+Shift+x			exec --no-startup-id betterlockscreen -l -t "keegan@rogue"

bindsym $mod+Print				exec scrot -z -e 'mv $f ~/Screenshots/'
bindsym $mod+Shift+Print 		exec scrot -u -z -e 'mv $f ~/Screenshots/'

# #------ Gap Resizing Bindings ------# #
bindsym $mod+i				gaps inner current plus 5
bindsym $mod+Shift+i 		gaps inner current minus 5
bindsym $mod+o			 	gaps outer current plus 5
bindsym $mod+Shift+o	 	gaps outer current minus 5

bindsym $mod+grave			gaps outer current set 0; gaps inner current set 15
bindsym $mod+Shift+grave 	gaps outer current set 0; gaps inner current set 0

# #------ Focus and Move Bindings ------# #
bindsym $mod+h 				focus left
bindsym $mod+j 				focus down
bindsym $mod+k 				focus up
bindsym $mod+l 				focus right

bindsym $mod+Shift+h 		move left
bindsym $mod+Shift+j 		move down
bindsym $mod+Shift+k 		move up
bindsym $mod+Shift+l 		move right

bindsym $mod+a 				focus child
bindsym $mod+Shift+a 		focus parent

# #------ Toggle Bindings ------# #
bindsym $mod+Shift+space	floating toggle
bindsym $mod+space			focus mode_toggle

bindsym $mod+t 				split toggle
bindsym $mod+s				layout toggle

bindsym $mod+f 				fullscreen toggle

# #------ Spotify Definitions D-Bus ------# #
# set $music 			spotify
# set $pause 			dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
# set $trupause 		dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Pause
# set $play 			dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Play
# set $next 			dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
# set $prev 			dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
# set $lilfor 		dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Seek
# set $bigfor 		dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Seek(

# #------ Spotify Definitions playerctl ------# #
set $music 			spotify
set $pause 			playerctl --player=spotify play-pause
set $trupause 		playerctl --player=spotify pause
set $play 			playerctl --player=spotify play
set $next 			playerctl --player=spotify next
set $prev 			playerctl --player=spotify previous
set $back 			playerctl --player=spotify position 15-
set $for 			playerctl --player=spotify position 15+

# #------ PulseAudio/Pamixer Definitions ------# #
set $lilinc 		--no-startup-id pamixer --allow-boost -i 1
set $inc 			--no-startup-id pamixer --allow-boost -i 5
set $biginc			--no-startup-id pamixer --allow-boost -i 10
set $lildec			--no-startup-id pamixer --allow-boost -d 1
set $dec 			--no-startup-id pamixer --allow-boost -d 5
set $bigdec			--no-startup-id pamixer --allow-boost -d 10
set $mute_t			--no-startup-id pamixer --allow-boost -t
set $mute			--no-startup-id pamixer --allow-boost -m
set $unmute			--no-startup-id pamixer --allow-boost -u

# #------ Music Bindings ------# #
bindsym $mod+Shift+s				exec $music

bindsym $mod+plus 					exec $lilinc
bindsym $mod+F3						exec $inc
bindsym $mod+Shift+plus 			exec $biginc

bindsym $mod+minus 					exec $lildec
bindsym $mod+F2						exec $dec
bindsym $mod+Shift+minus 			exec $bigdec

bindsym $mod+F1						exec $mute_t
bindsym $mod+F4						exec $mute
bindsym $mod+Shift+F4 				exec $unmute

bindsym $mod+comma 					exec $prev
bindsym $mod+period					exec $next
bindsym $mod+slash 					exec $pause
bindsym $mod+semicolon 				exec $trupause
bindsym $mod+apostrophe				exec $play

bindsym $mod+bracketleft			exec $back
bindsym $mod+bracketright			exec $for

# #------ Backlight Bindings ------# #
bindsym $mod+F6						exec xbacklight -inc 10
bindsym $mod+F5						exec xbacklight -dec 10

# #------ Xresources Colours ------# #
set_from_resource $darkgrey		color0	#000000
set_from_resource $grey			color8	#000000
set_from_resource $rose			color1	#000000
set_from_resource $palepink		color9	#000000
set_from_resource $oceanblue	color2	#000000
set_from_resource $lightblue	color10	#000000
set_from_resource $darkturqoise	color3	#000000
set_from_resource $lightturq	color11	#000000
set_from_resource $purple		color4	#000000
set_from_resource $palepurple	color12	#000000
set_from_resource $violet		color5	#000000
set_from_resource $lightpink	color13	#000000
set_from_resource $blue			color6	#000000
set_from_resource $paleblue		color14	#000000
set_from_resource $lightgrey	color7	#000000
set_from_resource $white		color15	#000000
set $transparent				#00000000

#					BORDER		BACKGROUND	TEXT		INDICATOR		CHILD_BORDER
client.focused		$lightgrey	$darkgrey	$white		$lightgrey		$lightgrey
client.unfocused	$grey		$darkgrey	$white		$grey			$grey	

# #------ Fonts ------# #
font pango:Inconsolata 18
# font pango:DejaVu Sans Mono 8
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# #------ Workspace Definitions ------# #
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# #------ Workspace Bindings ------# #
bindsym $mod+y			workspace next
bindsym $mod+Shift+y	workspace prev

bindsym $mod+1 			workspace $ws1
bindsym $mod+2 			workspace $ws2
bindsym $mod+3 			workspace $ws3
bindsym $mod+4 			workspace $ws4
bindsym $mod+5 			workspace $ws5
bindsym $mod+6 			workspace $ws6
bindsym $mod+7 			workspace $ws7
bindsym $mod+8 			workspace $ws8
bindsym $mod+9 			workspace $ws9
bindsym $mod+0			workspace $ws10

bindsym $mod+Shift+1 		move container to workspace $ws1
bindsym $mod+Shift+2 		move container to workspace $ws2
bindsym $mod+Shift+3 		move container to workspace $ws3
bindsym $mod+Shift+4 		move container to workspace $ws4
bindsym $mod+Shift+5 		move container to workspace $ws5
bindsym $mod+Shift+6 		move container to workspace $ws6
bindsym $mod+Shift+7 		move container to workspace $ws7
bindsym $mod+Shift+8 		move container to workspace $ws8
bindsym $mod+Shift+9 		move container to workspace $ws9
bindsym $mod+Shift+0 		move container to workspace $ws10

# #------ Status Bar ------# #
bar {
		position top
		font pango:Inconsolata 18
		# disable clicking on workspace buttons
		bindsym button1 nop
		status_command i3blocks 
}
